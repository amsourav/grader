<%= simple_form_for(@course) do |f| %>
  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :year %>
    <%= f.input :semester %>
    <%= f.hidden_field :teacher_id, :value => current_teacher.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
