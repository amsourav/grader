<%= simple_form_for([@course, @exam]) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.input :tot_ques %>
    <%= f.input :tot_marks %>
    <%= f.hidden_field :course_id, :value => :course_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
